{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/anime-viewers-data.csv"
  },
  "hconcat": [
    {
      "title": "Average Age of Anime Viewers by Country",
      "width": 800,
      "height": 400,
      "data": {
        "url": "js/ne_110m_admin_0_countries.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "projection": {
        "type": "equalEarth"
      },
      "layer": [
        {
          "transform": [
            {
              "calculate": "'There is no data found for ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "mark": {
            "type": "geoshape",
            "fill": "lightgray",
            "stroke": "white"
          },
          "encoding": {
            "tooltip": {"field": "note", "type": "nominal"},
            "color": {"value": "lightgray"}
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {
              "type": "topojson",
              "feature": "oceans"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": "#34acdf"
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_graticules_30"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": null,
            "stroke": "lightgray"
          }
        },
        {
          "data": {
            "url": "data/anime-viewers-data.csv"
          },
          "transform": [
            {
              "calculate": "datum.Country == 'USA' ? 'United States of America' : datum.Country == 'UK' ? 'United Kingdom' : datum.Country",
              "as": "Country_Standardized"
            },
            {
              "aggregate": [
                {
                  "op": "mean",
                  "field": "Age",
                  "as": "avg_age"
                }
              ],
              "groupby": ["Country_Standardized"]
            },
            {
              "lookup": "Country_Standardized",
              "from": {
                "data": {
                  "url": "js/ne_110m_admin_0_countries.topojson",
                  "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                  }
                },
                "key": "properties.NAME",
                "fields": ["type", "properties", "geometry"]
              }
            },
            {
              "filter": "datum.avg_age != null"
            }
          ],
          "mark": {
            "type": "geoshape",
            "stroke": "white",
            "strokeWidth": 0.5
          },
          "encoding": {
            "color": {
              "field": "avg_age",
              "type": "quantitative",
              "scale": {
                "type": "threshold",
                "domain": [39.5, 40, 40.5, 41],
                "range": ["#f2e5ff", "#d9b3ff", "#b366ff", "#8000ff", "#4d0099"]
              },
              "legend": {
                "title": "Average Age"
              }
            },
            "tooltip": [
              {"field": "Country_Standardized", "type": "nominal", "title": "Country"},
              {"field": "avg_age", "type": "quantitative", "title": "Average Age", "format": ".1f"}
            ]
          }
        }
      ]
    },
    {
      "title": "Gender Distribution of Anime Viewers",
      "width": 800,
      "height": 400,
      "data": {
        "url": "data/anime-viewers-data.csv"
      },
      "transform": [
        {
          "aggregate": [
            {
              "op": "count",
              "as": "count"
            }
          ],
          "groupby": ["Gender"]
        },
        {
          "window": [
            {
              "op": "sum",
              "field": "count",
              "as": "total"
            }
          ],
          "frame": [null, null]
        },
        {
          "calculate": "datum.count / datum.total * 100",
          "as": "percentage"
        }
      ],
      "mark": {
        "type": "arc",
        "innerRadius": 50
      },
      "encoding": {
        "theta": {
          "field": "count",
          "type": "quantitative"
        },
        "color": {
          "field": "Gender",
          "type": "nominal",
          "scale": {
            "domain": ["Male", "Female", "Other"],
            "range": ["#4A90E2", "#E24A90", "#9B59B6"]
          },
          "legend": {
            "title": "Gender"
          }
        },
        "tooltip": [
          {"field": "Gender", "type": "nominal", "title": "Gender"},
          {"field": "count", "type": "quantitative", "title": "Count"},
          {"field": "percentage", "type": "quantitative", "title": "Percentage", "format": ".1f"}
        ]
      }
    }
  ],
  "config": {
    "view": {
      "stroke": null
    }
  }
}