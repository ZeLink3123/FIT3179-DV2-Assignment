{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": null,
  "description": "Daily Anime Search Interest Index in 2025, with brush interaction for filtering.",
  "data": {
    "url": "data/au-anime-trends-2025.csv",
    "format": {
      "type": "csv",
      "parse": {"Day": "date:'%Y-%m-%d'"}
    }
  },
  "vconcat": [
    {
      "width": "container",
      "height": 250,
      "title": {
        "text": "Daily Australia Anime Search Interest in 2025",
        "fontSize": 20,
        "font": "Gravitas One",
        "anchor": "start",
        "offset": 20
      },
      "mark": {
        "type": "line",
        "color": "#8000ff",
        "strokeWidth": 2,
        "point": {"filled": true, "fill": "#4d0099", "size": 30}
      },
      "encoding": {
        "x": {
          "field": "Day",
          "type": "temporal",
          "title": "Date",
          "scale": {"domain": {"param": "brush"}},
          "axis": {
            "format": "%b %d",
            "labelAngle": 0,
            "labelFont": "Comic Sans MS"
          }
        },
        "y": {
          "field": "Anime Search Index",
          "type": "quantitative",
          "title": "Search Interest (70â€“100)",
          "scale": {"domain": [70, 100]},
          "axis": {"labelFont": "Comic Sans MS"}
        },
        "tooltip": [
          {"field": "Day", "type": "temporal", "title": "Date", "format": "%b %d"},
          {"field": "Anime Search Index", "type": "quantitative", "title": "Anime Search Popularity (Index)"}
        ]
      }
    },
    {
      "width": "container",
      "height": 60,
      "mark": {
        "type": "area",
        "color": "#b366ff",
        "strokeWidth": 1
      },
      "params": [
        {"name": "brush", "select": {"type": "interval", "encodings": ["x"]}}
      ],
      "encoding": {
        "x": {
          "field": "Day",
          "type": "temporal",
          "title": "Brush to filter date range",
          "axis": {
            "format": "%b %d",
            "labelFont": "Comic Sans MS"
          }
        },
        "y": {
          "field": "Anime Search Index",
          "type": "quantitative",
          "title": null,
          "axis": {"tickCount": 3, "grid": false, "labelFont": "Comic Sans MS"}
        }
      }
    }
  ],
  "config": {
    "background": "white",
    "font": "Comic Sans MS",
    "padding": {"top": 30},
    "axis": {"gridColor": "white"}
  }
}